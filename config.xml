	<gap:plugin name="org.apache.cordova.device" version="0.3.0" />
	<gap:plugin name="org.apache.cordova.console" version="0.2.13" />
	-->
	<plugin name="cordova-plugin-inappbrowser" spec="~1.7.0" />
	<plugin name="cordova-plugin-device" spec="~1.1.5" />
	<plugin name="cordova-plugin-console" spec="~1.0.6" />
	<gap:plugin name="com.sharinglabs.cordova.plugin.datepicker" />
