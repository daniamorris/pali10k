    <!-- Define app icon for each platform. -->
    <icon src="icon.png" />
    <icon src="res/icon1/android/icon-36-ldpi.png"   gap:platform="android"    gap:density="ldpi" />
    <icon src="res/icon1/android/icon-48-mdpi.png"   gap:platform="android"    gap:density="mdpi" />
    <icon src="res/icon1/android/icon-72-hdpi.png"   gap:platform="android"    gap:density="hdpi" />
    <icon src="res/icon1/android/icon-96-xhdpi.png"  gap:platform="android"    gap:density="xhdpi" />
    <icon src="res/icon1/blackberry/icon-80.png"     gap:platform="blackberry" />
    <icon src="res/icon1/blackberry/icon-80.png"     gap:platform="blackberry" gap:state="hover"/>

	<!-- iPhone / iPod Touch -->
	<icon src="res/icon1/ios/icon-57.png" gap:platform="ios" width="57" height="57" />
